    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Book">

  <resultMap type="com.dy.bean.Book" id="BookResult">
    <id column="id" jdbcType="INTEGER" property="id"/>
    <result column="bookname" jdbcType="VARCHAR" property="bookname"/>
    <result column="author" jdbcType="VARCHAR" property="author"/>
    <result column="publishhouse" jdbcType="VARCHAR" property="publishhouse"/>
    <result column="price" jdbcType="REAL" property="price"/>
    <result column="repertory" jdbcType="INTEGER" property="repertory"/>
  </resultMap>



  <select id="queryMessageList" parameterType="com.dy.bean.Book" resultMap="BookResult">
    SELECT id,author,bookname,publishhouse FROM book WHERE 1=1
    <if test="bookname!=null and  !&quot;&quot;.equals(bookname.trim())">and bookname=#{bookname}</if>
    <if test="author!=null and !&quot;&quot;.equals(author.trim())">and author like '%' #{author} '%'</if>
  </select>













